{
  "name": "next-nest-todo-keycloak",
  "version": "1.0.0",
  "description": "Full-stack Todo application with Next.js, NestJS, and Keycloak SSO authentication",
  "keywords": [
    "nextjs",
    "nestjs",
    "keycloak",
    "sso",
    "authentication",
    "graphql",
    "typescript",
    "docker",
    "jwt",
    "oauth2",
    "oidc"
  ],
  "author": "Anton Zotov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/votoznotna/next-nest-todo-keycloak.git"
  },
  "homepage": "https://github.com/votoznotna/next-nest-todo-keycloak#readme",
  "bugs": {
    "url": "https://github.com/votoznotna/next-nest-todo-keycloak/issues"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "install:all": "npm install && cd apps/api && npm install && cd ../web && npm install",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:reset": "docker-compose down -v && docker-compose up -d --build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
